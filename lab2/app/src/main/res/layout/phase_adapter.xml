<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvPhaseId"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            style="@style/edit_name_field"
            android:text="Name (1):"
            android:layout_marginLeft="10dp"/>

        <EditText
            style="@style/edit_change_field"
            android:id="@+id/etPhaseName"
            android:text="Phase Name"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">


        <TextView
            style="@style/edit_name_field"
            android:text="Phase duration (sec):"
            android:layout_marginLeft="10dp"/>

        <EditText
            style="@style/edit_change_field"
            android:id="@+id/etPhaseDuration"
            android:text="20"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            style="@style/edit_name_field"
            android:text="Rest duration (sec):"
            android:layout_marginLeft="10dp"/>

        <EditText
            style="@style/edit_change_field"
            android:id="@+id/etRestDuration"
            android:text="10"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            style="@style/edit_name_field"
            android:text="Repetitions amount:"
            android:layout_marginLeft="10dp"/>

        <EditText
            style="@style/edit_change_field"
            android:id="@+id/etRepetitions"
            android:text="2"
            />

    </LinearLayout>

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="match_parent"
        android:text="Delete"
        android:textSize="12sp"
        android:padding="0dp"
        android:fontFamily="@font/playfairdisplay_bold"
        android:backgroundTint="@color/btn_del"
        android:layout_height="match_parent"
        android:onClick="OnClickDeletePhase"/>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"/>

</LinearLayout>