<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvPhaseId"
        android:layout_width="0dp"
        android:layout_height="0dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/edit_name_field"
                    android:layout_marginLeft="10dp"
                    android:text="@string/phase_name"/>

                <TextView
                    android:id="@+id/tvPhaseName"
                    style="@style/edit_name_field"
                    android:text="Name of the phase"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tvDuration"
                    style="@style/edit_name_field"
                    android:layout_marginLeft="10dp"
                    android:text="20 sec\nduration"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/tvDurationRest"
                    style="@style/edit_name_field"
                    android:layout_marginLeft="20dp"
                    android:text="10 sec\nrest"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/tvRepetitions"
                    style="@style/edit_name_field"
                    android:layout_marginLeft="20dp"
                    android:text="5\nreps"
                    android:textAlignment="center" />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnPhaseDelete"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/delete_btn"
                android:textSize="12sp"
                android:padding="0dp"
                android:fontFamily="@font/playfairdisplay_bold"
                android:backgroundTint="@color/btn_del"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/btnPhaseEdit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/edit_btn"
                android:textSize="12sp"
                android:padding="0dp"
                android:fontFamily="@font/playfairdisplay_bold"
                android:backgroundTint="@color/btn_edit"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?colorLine"/>



</LinearLayout>