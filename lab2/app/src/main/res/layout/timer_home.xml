<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="vertical"
    android:id="@+id/linear_timer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="39dp">

    <TextView
        android:id="@+id/tvTimerId"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <TextView
        android:id="@+id/tvTimerTitle"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/title_aqua"
        android:gravity="center"
        android:text="timer"
        android:textSize="16sp"
        android:fontFamily="@font/playfairdisplay_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTimerDuration"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="26 sec"
        android:textSize="16sp"
        android:fontFamily="@font/playfairdisplay_regular"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="?colorText"/>


    <Button
        android:id="@+id/btnTimerEdit"
        android:layout_width="70dp"
        android:text="Edit"
        android:textSize="12sp"
        android:padding="0dp"
        android:fontFamily="@font/playfairdisplay_bold"
        android:backgroundTint="@color/btn_edit"
        android:layout_height="match_parent"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/btnTimerDelete"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:text="Del"
        android:textSize="12sp"
        android:padding="0dp"
        android:fontFamily="@font/playfairdisplay_bold"
        android:backgroundTint="@color/btn_del"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textColor="@android:color/white"/>

    </LinearLayout>


    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?colorLine"/>

</LinearLayout>